<div class="container mt-5 pb-3">
        <h2 class="text-primary text-center">Chỉnh Sửa Thông Tin Sản Phẩm</h2>
        <form method="POST" action="/shoes/{{shoes._id}}?_method=PUT">
            {{!-- <div class="form-group">
                <label for="_id">Mã Số Sản Phẩm</label>
                <input type="text" name="_id" class="form-control" id="productID" placeholder="Nhập mã số sản phẩm">
            </div> --}}
            <div class="form-group" >
                <label for="name_product">Tên Sản Phẩm</label>
                <input type="text" class="form-control" value="{{shoes.name_product}}" id="name_product"  name = "name_product" placeholder="Nhập tên sản phẩm">
            </div>
            <div class="form-group">
                <label for="price">Giá Tiền</label>
                <input type="number" class="form-control" value="{{shoes.price}}" id="price" name = "price" placeholder="Nhập giá tiền">
            </div>
            <div class="form-group">
                <label for="thumb_nail">Hình Ảnh</label>
                <input type="file" class="form-control-file" value="{{shoes.thumb_nail}}" id="thumb_nail" name = "thumb_nail">
            </div>
            <div class="form-group">
                <label for="category">Thể Loại Sản Phẩm</label>
                <select class="form-control"  id="category" name = "category">
                    <option>--- Choose one ---</option>
                    <option value="Nam" {{isSelected 'Nam' shoes.category}}>Nam</option>
                    <option value="Nữ" {{isSelected 'Nữ' shoes.category}}>Nữ</option>
                    <option value="Golf" {{isSelected 'Golf' shoes.category}}>Golf</option>
                    <option value="Phụ Kiện" {{isSelected 'Phụ Kiện' shoes.category}}>Phụ Kiện</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Mô Tả</label>
                <textarea class="form-control" value="{{shoes.description}}" id="description" name = "description" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
            </div>
            <div class="form-group">
                <label for="size">Size</label>
                <input type="text" class="form-control" name = "size" value="{{shoes.sze}}" id="size" placeholder="Nhập size sản phẩm">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Lưu Thông Tin</button>
        </form>
    </div>